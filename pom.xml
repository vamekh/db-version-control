<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>

    <groupId>ge.msda.commons</groupId>
    <artifactId>version-management-utils</artifactId>
    <version>0.0.2</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.8</java.version>
    </properties>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.3.1.RELEASE</version>
        <relativePath/>
    </parent>
    <dependencies>
        <!--Spring dependencies-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
        <!--MSDA dependencies-->
        <dependency>
            <groupId>ge.msda.clients</groupId>
            <artifactId>error-service</artifactId>
            <version>0.0.8</version>
        </dependency>
        <dependency>
            <groupId>ge.msda.commons</groupId>
            <artifactId>api-utils</artifactId>
            <version>0.1.4</version>
        </dependency>
    </dependencies>

    <distributionManagement>
        <repository>
            <id>maven-repo</id>
            <url>ftp://maven.msda.ge/var/www/html/maven-repo/</url>
        </repository>
    </distributionManagement>

    <build>
        <directory>target</directory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
        </plugins>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ftp</artifactId>
                <version>2.8</version>
            </extension>
        </extensions>
    </build>
    <repositories>
        <repository>
            <id>msda-maven-repo</id>
            <name>MSDA Private Repository</name>
            <url>http://maven.msda.ge/maven-repo</url>
        </repository>
    </repositories>
</project>